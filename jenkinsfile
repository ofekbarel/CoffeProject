pipeline {
    agent {
        kubernetes{
            yaml '''
            apiVersion: v1
            Kind: Pod
            spec:
              containers:
              - name: maven
                image: maven:alpine
                command:
                - cat 
                tty: true
              - name: postgres
                image: postgres:14
                env:
                - name: POSTGRES_USER
                  value: "postgres"
                - name: POSTGRES_PASSWORD
                  value: "postgres"
                - name: POSTGRES_DB
                  value: "test"
                - name: HOST
                  value: "localhost"


            '''
        }
    }

    stages{
        stage('Checkout Code') {
            steps {
                checkout scm
            }
        }



        stage('maven version'){
            steps{
                container('maven'){
                    sh 'mvn -version'
                }
            }

        }


        stage('test') {
            steps{
                container('postgres') {
                    // Install python and pytest
                    sh 'apt-get update && apt-get install -y python3 python3-pip libpq-dev gcc'
                    sh 'pip3 install -r requirements.txt'
                    sh 'pytest test_app.py'
                }
                    
            }
        }
    }



    post {
        failure {
            emailext body: 'The build failed. Please check the build logs for details.',
                     subject: "Build failed: ${currentBuild.fullDisplayName}",
                     to: 'ofekbarel10@gmail.com'
        }
        always {
            cleanWs()
        }
    }
}
